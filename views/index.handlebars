  <body background="/images/login-page.jpg">
    <div id="top"> 
      <div class="title"><img src="/images/homelogo.jpg" alt="Avatar" class="avatar"></div>

      <div class="chip">
        <img src="/images/users.jpg" alt="Person" class= "fb" width="96" height="96">
          <div class="container">
            <h5><b>John Doe</b></h5> 
          </div>
      </div>




     <div class="log">
        <a href="/" class="btn btn-info btn-sm" style="background-color: #DE600B;
              border-color: #DE600B;">
          <span class="glyphicon glyphicon-log-out" style="background-color: #DE600B;
              border-color: #DE600B;" ></span> Log out
        </a>
      </div>
    </div>

                                    <!-- search bar starts -->

    <div id="main">
  	        <div class = "search-container">
  	           <input type="text" id="search-p" onblur="this.value=''" onkeyup= "search()"placeholder="Search Routes to Connect With">
            </div>
          
          <div id="routes-p">
            <ul id="routes-ul">
              {{#each routes}}
              <li class="lists" id="{{route}}"><a href="#">{{route}} </a></li>
              {{/each}}
            </ul>
          </div>
    </div>

                                      <!-- nearby starts -->

    <div class="nearby">
      <h4> Nearby routes... </h4> 
      <ul>
        {{#each nearbyStops}}
          <li class="lists" id="{{route}}"> <a href="#"> {{route}} </a> </li>
        {{/each}}
      </ul>
    </div>

                                      <!-- favorites starts -->
    <h3> Favorites 
  
        <span class="popup glyphicon glyphicon-question-sign helpicon" onclick="favehelp()">
          <span class="popuptext" id="help-popup"> To add a route to your favorites, navigate to the route itself using the search bar. </span>

        </span>

    </h3> 
    

    <div class="box">

       {{#each favedroutes}}
        <div class="favedroutes">
            <button class="favebutton" id="{{route}}">{{route}}</button>
            </br>
        </div>
        {{/each}}
    </div>

    <script src="https://code.jquery.com/jquery.js"></script>
    <script src = "js/project.js"></script>
    {{> facebook}}
    <script src="/js/facebookT.js"></script>
  </body>

